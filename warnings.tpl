<!-- BEGIN: ERROR -->     
<div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <h5><i class="icon fas fa-ban"></i> {PHP.L.Error}</h5>
    <ul class="list-unstyled">
        <!-- BEGIN: ERROR_ROW -->
        <li>{ERROR_ROW_MSG}</li>
        <!-- END: ERROR_ROW -->
    </ul>
</div>  
<!-- END: ERROR -->

<!-- BEGIN: WARNING -->
<div class="alert alert-warning  alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <h5><i class="icon fas fa-exclamation-triangle"></i> {PHP.L.Warning}</h5>
    <ul class="list-unstyled">
        <!-- BEGIN: WARNING_ROW -->
        <li>{WARNING_ROW_MSG}</li>
        <!-- END: WARNING_ROW -->
    </ul>
</div>  
<!-- END: WARNING -->

