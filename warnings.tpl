    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <h5><i class="icon fas fa-info"></i> {PHP.L.Done}</h5>
    <ul class="list-unstyled">
        <!-- BEGIN: DONE_ROW -->
        <li>{DONE_ROW_MSG}</li>
        <!-- END: DONE_ROW -->
    </ul>
</div>  
<!-- END: DONE -->